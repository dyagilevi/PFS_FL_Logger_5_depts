<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogDetails">

    <TextView
        android:id="@+id/tv_details_chargerCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/edit_round_grey"
        android:padding="10dp"
        android:text="Charger Code"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/tv_details_moduleNum"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_details_comments"
        android:layout_width="0dp"
        android:layout_height="324dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_round_grey"
        android:padding="10dp"
        android:text="Comment"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_details_moduleNum"
        app:layout_constraintStart_toStartOf="@+id/tv_details_chargerCode"
        app:layout_constraintTop_toBottomOf="@+id/tv_details_date" />

    <TextView
        android:id="@+id/tv_details_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_round_grey"
        android:padding="10dp"
        android:text="Date"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/tv_details_chargerCode"
        app:layout_constraintTop_toBottomOf="@+id/tv_details_chargerCode" />

    <TextView
        android:id="@+id/tv_details_moduleNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_round_grey"
        android:padding="10dp"
        android:text="Module Number"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tv_details_chargerCode"
        app:layout_constraintTop_toTopOf="@+id/tv_details_chargerCode" />
</androidx.constraintlayout.widget.ConstraintLayout>